<h1>Project Detail</h1>
<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @project.content %>
</p>

<p>
  <strong>Repo url:</strong>
  <%= @project.repo_url %>
</p>

<p>
  <strong>State:</strong>
  <%= @project.state %>
</p>

<p>
  <strong>Members: </strong>
  <%= @project.users.map(&:email).join(', ') %>
</p>

<h2>issues</h2>
<table>
  <% @issues.each do |issue| %>
    <tr>
      <td><%= issue.user_name %></td>
      <td><%= issue.body_without_time %></td>
      <td><%= issue.spend_time %></td>
      <td><%= issue.happened_at %></td>
    </tr>
  <% end %>
</table>
